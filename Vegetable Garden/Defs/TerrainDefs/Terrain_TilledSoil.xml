<?xml version="1.0" encoding="utf-8" ?>
<TerrainDefs>

  <TerrainDef>
    <defName>VG_SoilTilled</defName>
    <label>garden soil</label>
	<Description>Till soil to make a small improvement in soil growing condition. Soil fertility is 120% of normal soil.</Description>
    <texturePath>Things/floor/FarmSoil</texturePath>
    <EdgeType>FadeRough</EdgeType>
    <RenderPrecedence>335</RenderPrecedence>
    <PathCost>4</PathCost>
    <statBases>
      <Beauty>0</Beauty>
	  <WorkToBuild>1000</WorkToBuild>
    </statBases>
	<designationCategory>GardenTools</designationCategory>
	<constructEffect>ConstructDirt</constructEffect>
    <affordances>
      <li>Light</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <TerrainFilthDef>FilthDirt</TerrainFilthDef>
    <Fertility>1.2</Fertility>
    <TakeFootprints>True</TakeFootprints>
	<acceptFilth>false</acceptFilth>
    <avoidWander>true</avoidWander>
	<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
    <CostList>
      <RawFertilizer>10</RawFertilizer>
    </CostList>
	<researchPrerequisites>
      <li>SoilReclam</li>
    </researchPrerequisites>

  </TerrainDef>
  
